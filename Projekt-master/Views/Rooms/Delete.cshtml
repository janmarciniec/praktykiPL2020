@model Praktyki.Models.Room

@{
    ViewData["Title"] = "Usuwanie sali";
}

<h3 class="my-4">Czy chcesz usunąć poniższą salę?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nr)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nr)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Powrót</a>
    </form>
</div>
