@model Praktyki.Models.Room

@{
    ViewData["Title"] = "Edycja sali";
}

<h1 class="my-4">Edycja sali</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nr" class="control-label"></label>
                <input asp-for="Nr" class="form-control" />
                <span asp-validation-for="Nr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary form-control" />
                <a asp-action="Index" class="btn btn-secondary form-control mt-1">Powrót</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
