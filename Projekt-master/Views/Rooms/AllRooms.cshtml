@model IEnumerable<Praktyki.Models.Room>

@{
    ViewData["Title"] = "Sale:";
}

<h1 class="mt-4 mb-2">Sale:</h1>

@if (Model.Count() > 0)
{
    @foreach (var item in Model)
    {
        <a asp-controller="Reservations" asp-action="RoomReservations" asp-route-id="@item.Id" class="btn btn-outline-dark btn-lg p-5 mb-2 mr-1"><h1>@Html.DisplayFor(modelItem => item.Nr)</h1></a>
    }
}
else
{
    <b class="mt-5">Brak dodanych sal.</b>
}