@model IEnumerable<Praktyki.Models.Room>

@{ ViewData["Title"] = "Sala " + Model.ElementAt(0).Nr;}

<div class="text-center">
    <h1 class="mt-4">Sala @Model.ElementAt(0).Nr</h1>

    <div>
        <a asp-action="Create" asp-route-id="@Model.ElementAt(0).Id" class="btn btn-primary btn-lg mb-2"><i class="fas fa-plus"></i> Dodaj zajęcia</a>
    </div>
</div>

<h3 class="mt-5">Poniedziałek</h3>

@if (Model.ElementAt(0).Reservations.Where(x => x.Day.Name == "Poniedziałek").Count() > 0)
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(model => model.Reservations.FirstOrDefault().Hour)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Reservations.FirstOrDefault().Teacher)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Reservations.FirstOrDefault().Group)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Reservations.FirstOrDefault().Subject)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Reservations.FirstOrDefault().Room)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                @foreach (var value in item.Reservations)
                {
                    @if (value.Day.Name == "Poniedziałek")
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => value.Hour.Hours)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => value.Teacher.Title)
                                @Html.DisplayFor(modelItem => value.Teacher.FirstName)
                                @Html.DisplayFor(modelItem => value.Teacher.SecondName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => value.Group.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => value.Subject.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => value.Room.Nr)
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@value.Id" class="btn btn-success btn-sm mb-1 mb-md-0"><i class="far fa-edit"></i> Edytuj</a>
                                <a asp-action="Delete" asp-route-id="@value.Id" class="btn btn-danger btn-sm"><i class="far fa-trash-alt"></i> Usuń</a>
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
}
else
{
    <div class="mb-4">
        <b>Brak zajęć.</b>
    </div>
}

