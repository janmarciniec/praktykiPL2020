@model IEnumerable<Praktyki.Models.Reservation>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1 class="my-4">Wszystkie zajęcia</h1>

    <div>
        <a asp-controller="Teachers" asp-action="Search" class="btn btn-primary mb-3"><i class="fas fa-search"></i> Szukaj nauczyciela</a>
        <a asp-controller="Subjects" asp-action="Search" class="btn btn-primary mb-3"><i class="fas fa-search"></i> Szukaj przedmiotu</a>
    </div>
</div>

<h3 class="mt-4">Poniedziałek</h3>

@if (Model.Where(x => x.Day.Name == "Poniedziałek").Count() > 0)
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(model => model.Hour)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Teacher)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Group)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Subject)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Room)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Where(x => x.Day.Name == "Poniedziałek"))
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Hour.Hours)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Teacher.Title)
                        @Html.DisplayFor(modelItem => item.Teacher.FirstName)
                        @Html.DisplayFor(modelItem => item.Teacher.SecondName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Group.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subject.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Room.Nr)
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm mb-1 mb-md-0"><i class="far fa-edit"></i> Edytuj</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="far fa-trash-alt"></i> Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mb-4">
        <b>Brak zajęć.</b>
    </div>
}

