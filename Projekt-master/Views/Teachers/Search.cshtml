@model Praktyki.Models.Teacher

@{ ViewData["Title"] = "Wyszukiwanie nauczyciela";}

<h1>Wyszukiwanie nauczyciela</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Search">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.FirstName" class="control-label"></label>
                <input asp-for="@Model.FirstName" class="form-control" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.SecondName" class="control-label"></label>
                <input asp-for="@Model.SecondName" class="form-control" />
                <span asp-validation-for="@Model.SecondName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="dzien" class="control-label">Dzień tygodnia</label>
                @Html.DropDownList("Days", null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input asp-action="Search" type="submit" value="Wyszukaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
