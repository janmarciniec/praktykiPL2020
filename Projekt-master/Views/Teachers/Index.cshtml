@model IEnumerable<Praktyki.Models.Teacher>

@{
    ViewData["Title"] = "Nauczyciele";
}

<h1 class="my-4">Nauczyciele</h1>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SecondName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SecondName)
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm mb-1 mb-md-0"><i class="far fa-edit"></i> Edytuj</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="far fa-trash-alt"></i> Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mb-3">
        <b>Brak dodanych nauczycieli.</b>
    </div>
}

<div>
    <a asp-action="Create" class="btn btn-primary btn-lg"><i class="fas fa-plus"></i> Dodaj nauczyciela</a>
</div>
