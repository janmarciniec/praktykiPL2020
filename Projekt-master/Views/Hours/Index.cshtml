@model IEnumerable<Praktyki.Models.Hour>

@{
    ViewData["Title"] = "Godziny zajęć";
}

<h1 class="my-4">Godziny zajęć</h1>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(model => model.Hours)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hours)
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm"><i class="far fa-edit"></i> Edytuj</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="far fa-trash-alt"></i> Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
<div class="mb-3">
    <b>Brak dodanych godzin.</b>
</div>
}

<div>
    <a asp-action="Create" class="btn btn-primary btn-lg"><i class="fas fa-plus"></i> Dodaj godzinę zajęć</a>
</div>
