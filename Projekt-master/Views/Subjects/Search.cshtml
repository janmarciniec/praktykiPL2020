@model Praktyki.Models.Subject

@{ ViewData["Title"] = "Wyszukiwanie przedmiotu"; }

<h1 class="my-4">Wyszukiwanie przedmiotu</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Search">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-action="SearchResults" type="submit" value="Wyszukaj" class="btn btn-primary form-control" />
                <a href='javascript:history.go(-1)' class="btn btn-secondary form-control mt-1">Powrót</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
